<?xml version="1.0"?>
<launch>

  <!-- send cob3 urdf to param server -->
  <include file="$(find cob_description)/ros/robots/upload_arm_sdh.launch" />

  <!-- push robot_description to factory and spawn robot in gazebo -->
  <node name="cob3_gazebo_model" pkg="gazebo_tools" type="gazebo_model" args="$(optenv ROBOT_INITIAL_POSE) -p robot_description spawn" respawn="false" output="screen" />

  <!-- arm Controllers -->
  <include file="$(find cob_controller_configuration_gazebo)/ros/launch/arm_controller.launch" />

  <!-- sdh Controllers -->
  <include file="$(find cob_controller_configuration_gazebo)/ros/launch/sdh_controller.launch" />

  <!-- default bringup script -->
  <include file="$(find cob_gazebo)/ros/launch/cob_bringup.launch" />

</launch>
