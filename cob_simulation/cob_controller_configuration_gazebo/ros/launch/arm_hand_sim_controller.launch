<?xml version="1.0"?>
<launch>
        <!-- Arm -->
	<rosparam file="$(find cob_controller_configuration_gazebo)/ros/controller/cob_arm_controller.yaml" command="load"/>

        <!-- SDH -->
        <rosparam file="$(find cob_controller_configuration_gazebo)/ros/controller/cob_sdh_controller.yaml" command="load" />

	<node name="spawn_arm_controller" pkg="pr2_controller_manager" type="spawner" args="arm_controller sdh_controller" respawn="false" output="screen" />
	
	<group ns="arm_controller">
	      <node name="arm_joint_trajectory_action_node" pkg="joint_trajectory_action" type="joint_trajectory_action" />
	</group>

        <group ns="sdh_controller">
	      <node name="sdh_joint_trajectory_action_node" pkg="joint_trajectory_action" type="joint_trajectory_action" />
        </group>

</launch>
